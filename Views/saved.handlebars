<div class="container p-2">
<div class="row">
  <div class="col-md-12">
    {{#each saved}}
        <div class="article my-3">
          <h5>{{title}}</h5>
          <p>{{summary}}</p>
            <a href={{link}} target="_blank">Read More</a>
              <form action="/delete/{{this.id}}" method="POST" id="delete-article" class="d-inline">
                  <input type="hidden" name="id" value={{_id}}>
                  <button class="btn btn-link ml-3" id="saveButton" type="submit">Delete</button>
              </form>
        </div>
      {{/each}}
  </div>
</div>
</div>
</body>

